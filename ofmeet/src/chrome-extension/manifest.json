{
   "background": {
      "persistent": true,    
      "scripts": [ "background.js" ]
   },
   "content_scripts": [ {
      "all_frames": true,
      "css": [ "cursor.css" ],
      "js": [ "content.js", "jquery.min.js", "util.js", "ofmeet.js", "tinycolor.js" ],
      "matches": [ "https://*/*", "http://*/*" ]
   } ],
   "description": "Openfire Meetings Chrome Extension required for screen sharing, remote control and co-browsing",
   "icons": {
      "128": "icon128.png",
      "16": "icon16.png",
      "48": "icon48.png"
   },
   "manifest_version": 2,
   "minimum_chrome_version": "34",
   "name": "Openfire Meetings Chrome Extension",
   "permissions": [ "desktopCapture", "background", "nativeMessaging", "http://localhost/"],
   "short_name": "ofmeet chrome extension",
   "version": "0.0.6"
}
